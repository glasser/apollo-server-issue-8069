{
  "$schema": "https://json.schemastore.org/tsconfig",
  "$source": "https://github.com/tsconfig/bases/blob/main/bases/node22.json",
  "display": "Node 22 + Express",
  "_version": "24.1.0",

  "compilerOptions": {
    "lib": ["ESNext"],
    "types": ["node", "express"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noErrorTruncation": true,

    "declaration": true,
    "sourceMap": true,

    "baseUrl": ".",
    "outDir": "build",
  },
  "exclude": ["build", "node_modules"]
}
